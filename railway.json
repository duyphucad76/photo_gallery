{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": { "nixPkgs": ["caddy"] },
        "install": { "cmds": ["npm ci"] },
        "build": { "cmds": ["npm run build"] }
      }
    }
  },
  "deploy": {
    "startCommand": "vite preview --host 0.0.0.0 --port $PORT",

    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  }
}
